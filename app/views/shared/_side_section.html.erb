<div class="col-2 links-section pl-0">
    <li class="nav-item">
        <%= link_to "<i class='fas fa-hashtag mr-3'></i>".html_safe+ "Explore", all_tweets_path, class: 'nav-link first-link text-dark w-100 mt-2 rounded-pill'%>
    </li>
    <% if user_signed_in? %>
        <% if current_user.admin %>
            <li class="nav-item">
                <%= link_to "<i class='fa fa-id-card mr-3'></i>".html_safe+"Admin", admin_root_path, class: 'nav-link text-dark mt-2 rounded-pill' %>
            </li>
        <% end%>

        <li class="nav-item">
            <%= link_to "<i class='fas fa-home mr-3'></i>".html_safe+ "Home", root_path, class: 'nav-link second-link text-dark w-100 mt-2 rounded-pill'%>
        </li>

        <li class="nav-item">
            <%= link_to "<i class='fas fa-user mr-3'></i>".html_safe+ "My Profile", home_my_profile_path, class: 'nav-link third-link text-dark w-100 mt-2 rounded-pill'%>
        </li>

        <li class="nav-item">
            <%= link_to "<i class='fas fa-sign-out-alt mr-1'></i>".html_safe+ "Sign out", destroy_user_session_path,class: 'nav-link fourth-link text-dark mt-2 rounded-pill' %>
        </li>

        <!-- Button trigger modal -->
        <button type="button" class="nav-link color-twitter text-center text-light border-light w-100 mt-2 rounded-pill" data-toggle="modal" data-target="#exampleModal">
        Tweet
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                <% if user_signed_in? %>
                <%= render 'tweets/form', tweet: @tweet %>
                <% end %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            </div>
        </div>
        </div>

        <% else %>
        <li class="nav-item">
            <%= link_to "<i class='fa fa-smile-o mr-2' aria-hidden='true'></i>".html_safe+ "Register", new_user_registration_path, class: 'nav-link second-link text-dark mr-3 rounded-pill' %>
        </li>
        <li class="nav-item">
            <%= link_to "<i class='fa fa-sign-in mr-2' aria-hidden='true'></i>".html_safe+"Log in", new_user_session_path, class: 'nav-link third-link text-dark mr-3 rounded-pill' %>
        </li>
    <% end %>
</div>